@page
@model ScheduleVaccineRazor.Pages.Accounts.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px;">
        <div class="text-center">
            <h2 class="fw-bold text-primary">Login</h2>
            <p class="text-muted">Sign in to access your account</p>
        </div>

        @if (Model.LoginFailed)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Access Denied!</strong> You do not have permission to perform this action.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold">Email Address</label>
                <input asp-for="Input.Email" class="form-control rounded-3" placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.PasswordHash" class="form-label fw-semibold">Password</label>
                <input asp-for="Input.PasswordHash" class="form-control rounded-3" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Input.PasswordHash" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary rounded-pill fw-bold">Login</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a href="#" class="text-decoration-none text-primary">Forgot Password?</a>
        </div>
    </div>
</div>
