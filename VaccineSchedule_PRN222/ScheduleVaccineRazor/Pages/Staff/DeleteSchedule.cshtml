@page
@model ScheduleVaccineRazor.Pages.Staff.DeleteScheduleModel

@{
    ViewData["Title"] = "Delete Schedule";
}

<!-- Thêm Bootstrap và Font Awesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Schedule</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Are you sure you want to delete this schedule?</h4>
                    <hr />
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>@Html.DisplayNameFor(model => model.Schedule.AppointmentDate)</strong>: @Html.DisplayFor(model => model.Schedule.AppointmentDate)
                        </li>
                        <li class="list-group-item">
                            <strong>@Html.DisplayNameFor(model => model.Schedule.Status)</strong>: @Html.DisplayFor(model => model.Schedule.Status)
                        </li>
                        <li class="list-group-item">
                            <strong>@Html.DisplayNameFor(model => model.Schedule.Child)</strong>: @Html.DisplayFor(model => model.Schedule.Child.FullName)
                        </li>
                        <li class="list-group-item">
                            <strong>@Html.DisplayNameFor(model => model.Schedule.Vaccine)</strong>: @Html.DisplayFor(model => model.Schedule.Vaccine.Name)
                        </li>
                    </ul>
                    <form method="post" class="mt-3">
                        <input type="hidden" asp-for="Schedule.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a asp-page="/Staff/Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.02);
        }

    h1, h4 {
        font-family: 'Segoe UI', sans-serif;
    }
</style>