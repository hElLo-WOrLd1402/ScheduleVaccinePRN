@page
@model ScheduleVaccineRazor.Pages.Home.ProfileModel
@{
    ViewData["Title"] = "Profile Settings";
}

<h2>Profile Management</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Username Update Form -->
<form method="post">
    <div class="mb-3">
        <label class="form-label">New Username</label>
        <input type="text" class="form-control" asp-for="NewUsername" required>
    </div>
    <button type="submit" class="btn btn-primary" asp-page-handler="ChangeUsername">Update Username</button>
</form>

<hr>

<!-- Password Update Form -->
<form method="post">
    <div class="mb-3">
        <label class="form-label">New Password</label>
        <input type="password" class="form-control" asp-for="NewPassword" required>
    </div>
    <button type="submit" class="btn btn-danger" asp-page-handler="ChangePassword">Update Password</button>
</form>
